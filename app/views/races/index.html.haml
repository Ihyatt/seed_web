.container
  .row.m-t-1
    .col-sm-12
      %h1 Races

      %table.table
        %thead
          %tr
            %th Name
            %th Position
            %th
            %th

        %tbody
          - @races.each do |race|
            %tr
              %td= link_to race.name, race
              %td= race.position
              %td= link_to 'Edit', edit_race_path(race)
              %td= link_to 'Destroy', race, :method => :delete, :data => { :confirm => 'Are you sure?' }

      %br

      = link_to 'New Race', new_race_path, class: "btn btn-primary"
