= form_for @api_key do |f|
  - if @api_key.errors.any?
    #error_explanation
      %h2= "#{pluralize(@api_key.errors.count, "error")} prohibited this api_key from being saved:"
      %ul
        - @api_key.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :read_key
    = f.text_field :read_key, class: 'form-control', disabled: true
    = f.hidden_field :read_key, value: @api_key.read_key
  .form-group
    = f.label :write_key
    = f.text_field :write_key, class: 'form-control', disabled: true
    = f.hidden_field :write_key, value: @api_key.write_key
  
  = f.submit 'Save', class: "btn btn-primary"
